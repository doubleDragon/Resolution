<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wsl.example.MainActivity">

    <TextView
        android:id="@+id/view_display"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0"
        android:gravity="center"
        android:text="Hello World!" />


    <TextView
        android:id="@+id/view_display10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0"
        android:gravity="center"
        android:text="Hello World!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_display1"
            android:layout_width="@dimen/s120"
            android:layout_height="@dimen/s120"
            android:background="#f00"
            android:gravity="center"
            android:text="@string/test_text" />

        <TextView
            android:id="@+id/view_display2"
            android:layout_width="@dimen/s120"
            android:layout_height="@dimen/s120"
            android:background="#00f"
            android:gravity="center"
            android:text="@string/test_text" />

        <TextView
            android:id="@+id/view_display3"
            android:layout_width="@dimen/s120"
            android:layout_height="@dimen/s120"
            android:background="#0ff"
            android:gravity="center"
            android:text="@string/test_text" />

    </LinearLayout>


    <TextView
        android:layout_width="@dimen/s120"
        android:layout_height="@dimen/s150"
        android:layout_marginTop="@dimen/s150"
        android:background="@color/colorPrimary"
        android:text="@string/test_text2"
        android:gravity="center"
        />


</LinearLayout>
